<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:dropDownItemStyle">@style/SuggestAutoCompleteStyle</item>
    </style>

    <style name="MaterialTheme.ToolbarTextView">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">@dimen/replay_count_text_size</item>
    </style>

    <style name="MaterialTheme.ToolbarTextView.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MaterialTheme.Toolbar">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
        <item name="android:textColorHint">@color/icons</item>
    </style>

    <style name="MaterialTheme.Text">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="MaterialTheme.Text.Title">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/replay_item_textview_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/replay_title_background</item>
    </style>

    <style name="MaterialTheme.ItemText">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginTop">@dimen/replay_item_text_margin</item>
        <item name="android:textSize">@dimen/replay_item_text_size</item>
        <item name="android:paddingLeft">@dimen/replay_item_textview_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MaterialTheme.ItemText.Title">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/replay_title_background</item>
    </style>

    <style name="MaterialTheme.ItemText.Description">
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="MaterialTheme.Text.Description">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:paddingLeft">@dimen/replay_item_textview_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MaterialTheme.Text.Date">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialTheme.Text.Duration">
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/replay_duration_background</item>
        <item name="android:paddingLeft">@dimen/replay_item_textview_padding</item>
        <item name="android:paddingRight">@dimen/replay_item_textview_padding</item>
    </style>

    <style name="MaterialTheme.Text.Duration.Item">
        <item name="android:textSize">@dimen/replay_count_text_size</item>
    </style>

    <style name="MaterialTheme.Text.Date.Item">
        <item name="android:textSize">@dimen/replay_count_text_size</item>
        <item name="android:layout_marginLeft">@dimen/replay_item_textview_left_margin</item>
    </style>

    <style name="MaterialTheme.Text.Genre">
        <item name="android:textColor">@color/icons</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:background">@drawable/replay_genre_background</item>
        <item name="android:paddingLeft">@dimen/replay_item_textview_padding</item>
        <item name="android:paddingRight">@dimen/replay_item_textview_padding</item>
    </style>

    <style name="ReplayItemImage">
        <item name="android:layout_margin">@dimen/replay_item_text_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ReplayItemTag">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">@dimen/replay_item_text_size</item>
    </style>

    <style name="ReplayItemWaveform">
        <item name="android:layout_marginTop">@dimen/replay_item_text_margin</item>
        <item name="android:background">@drawable/replay_waveform_background</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/replay_item_textview_padding</item>
    </style>

    <style name="SuggestAutoCompleteStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="MaterialTheme.Text.Time" parent="MaterialTheme.Text.Genre">
        <item name="android:textSize">@dimen/player_time_size</item>
        <item name="android:paddingLeft">@dimen/player_time_padding_width</item>
        <item name="android:paddingRight">@dimen/player_time_padding_width</item>
        <item name="android:paddingTop">@dimen/player_time_padding_height</item>
        <item name="android:paddingBottom">@dimen/player_time_padding_height</item>
    </style>

    <style name="PlayerButtonsMargin">
        <item name="android:layout_marginTop">@dimen/player_buttons_height_margin</item>
        <item name="android:layout_marginBottom">@dimen/player_buttons_height_margin</item>
        <item name="android:layout_marginLeft">@dimen/player_buttons_width_margin</item>
        <item name="android:layout_marginRight">@dimen/player_buttons_width_margin</item>
    </style>

    <style name="MaterialTheme.Text.Genre.PlayerButtonsMargin">
        <item name="android:textSize">@dimen/player_time_text_size</item>
        <item name="android:layout_marginTop">@dimen/player_buttons_height_margin</item>
        <item name="android:layout_marginBottom">@dimen/player_buttons_height_margin</item>
        <item name="android:layout_marginLeft">@dimen/player_time_width_margin</item>
        <item name="android:layout_marginRight">@dimen/player_time_width_margin</item>
    </style>

    <style name="MaterialTheme.Tabs">
        <item name="tabTextColor">@color/primary_light</item>
        <item name="tabSelectedTextColor">@color/icons</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/accent</item>
    </style>

</resources>