<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="replayItem"
            type="com.stationmillenium.android.replay.dto.TrackDTO" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/replay_item_text_margin">

        <ImageView
            android:id="@+id/replay_item_artwork"
            style="@style/ReplayItemImage"
            app:replayImage="@{replayItem}"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            style="@style/ThemeReplay.ReplayItemText.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{replayItem.title}"/>

        <TextView
            style="@style/ThemeReplay.ReplayItemText.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{replayItem.description}"/>

    </LinearLayout>

</layout>