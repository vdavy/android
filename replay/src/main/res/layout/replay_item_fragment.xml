<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="replayItem"
            type="com.stationmillenium.android.replay.dto.TrackDTO" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/replay_item_text_margin">

        <ImageView
            android:id="@+id/replay_item_artwork"
            style="@style/ReplayItemImage"
            app:replayImage="@{replayItem}"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            style="@style/ThemeReplay.ReplayItemText.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{replayItem.title}"/>

        <TextView
            style="@style/ThemeReplay.ReplayItemText.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{replayItem.description}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/replay_item_text_margin">

            <TextView
                style="@style/ThemeReplay.ReplayText.Duration.Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{replayItem.duration}"/>

            <TextView
                android:text="@string/replay_date_duration_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/replay_separator"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"/>

            <TextView
                style="@style/ThemeReplay.ReplayText.Date.Item"
                android:text="@{replayItem.lastModified}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/replay_date"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/replay_item_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:replayBackground="@{replayItem}"
            android:gravity="center">

            <TextView
                style="@style/ThemeReplay.ReplayText.Genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"/>

        </LinearLayout>

    </LinearLayout>

</layout>