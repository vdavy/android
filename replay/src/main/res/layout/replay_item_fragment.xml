<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="replayItem"
            type="com.stationmillenium.android.replay.dto.TrackDTO" />
        <variable
            name="percentPlayed"
            type="java.lang.Integer" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/replay_item_text_margin">

        <ImageView
            android:id="@+id/replay_item_artwork"
            style="@style/ReplayItemImage"
            app:replayImage="@{replayItem}"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="ContentDescription"/>

        <TextView
            style="@style/MaterialTheme.ReplayItemText.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{replayItem.title}"
            tools:ignore="ContentDescription"/>

        <TextView
            style="@style/MaterialTheme.ReplayItemText.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{replayItem.description}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/replay_item_text_margin">

            <TextView
                style="@style/MaterialTheme.ReplayText.Duration.Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{replayItem.duration}"/>

            <TextView
                android:text="@string/replay_date_duration_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/replay_item_separator"
                android:layout_marginStart="@dimen/replay_item_textview_left_margin"
                android:layout_marginLeft="@dimen/replay_item_textview_left_margin"/>

            <TextView
                style="@style/MaterialTheme.ReplayText.Date.Item"
                android:text="@{replayItem.lastModified}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/replay_date"/>

        </LinearLayout>

        <com.stationmillenium.android.replay.utils.view.FlowLayout
            android:id="@+id/replay_item_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/replay_item_text_margin" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                style="@style/ReplayItemWaveform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:replayBackground="@{replayItem}"
                app:percentPlayed="@{percentPlayed}"
                android:visibility="gone"
                tools:ignore="ContentDescription"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ProgressBar
                android:id="@+id/replay_item_progressbar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.7"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</layout>