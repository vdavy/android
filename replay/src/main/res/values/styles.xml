<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeReplay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="ThemeReplay.ReplayCount">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">@dimen/replay_count_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ThemeReplay.Toolbar">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

    <style name="ThemeReplay.ReplayText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ThemeReplay.ReplayText.Pink">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/replay_title_background</item>
    </style>

    <style name="ThemeReplay.ReplayText.Blue">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ThemeReplay.ReplayText.Genre">
        <item name="android:textColor">@color/icons</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:background">@drawable/replay_genre_background</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

</resources>